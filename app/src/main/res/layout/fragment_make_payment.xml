<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nilay.tipme.MerchantAccount"
    android:background="@android:color/holo_blue_light">


    <EditText
        android:id="@+id/recipientEmail"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:hint="Recipient Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentStart="true" />

    <!-- Login Button --><![CDATA[

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/routingNumber"
        android:layout_alignParentStart="true">

        ]]>

    <EditText
        android:id="@+id/paymentAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:hint="Payment Amount"
        android:inputType="number"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/input_register"
        android:textColorHint="@color/input_register_hint"
        android:layout_weight="1"
        android:layout_below="@+id/recipientEmail"
        android:layout_alignStart="@+id/recipientEmail"
        android:layout_alignEnd="@+id/recipientEmail" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffea5cb3"
        android:text="Submit"
        android:textColor="@color/white"
        android:onClick="submitMerchant"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/paymentAmount"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
